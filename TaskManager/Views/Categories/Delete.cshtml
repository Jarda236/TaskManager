@model TaskManager.DTOs.CategoryNumOfTasks

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete selected category</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
               Number of tasks:
        </dt>
        <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.NumOfTasks)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        @if (Model.NumOfTasks == 0)
        {
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        }
        else
        {
            <div>
                <p>Category is included in some tasks. You can not delete it.</p>
            </div>
        }
        <a asp-action="Index">Back to List</a>
    </form>
</div>
